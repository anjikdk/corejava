package com.amazon;

public class Test1 {

	public static void main(String[] args) {
		
		System.out.println(countdistinct("good"));
	}
	
	static int solve(char c, String s){ // Counts no.of substrings that contain atleast one of the characters as c.
        int cnt=0,n=s.length(),res=0;
        for(int i=0;i<n;i++){
            if(s.charAt(i)==c){
                res+=(cnt)*(cnt+1)/2;
                cnt=0;
            }
            else
                cnt++;
        }
        res+=(cnt)*(cnt+1)/2;
        return n*(n+1)/2 - res;
    }
    static int countdistinct(String s) {
        int ans=0;
        for(char c='A';c<='Z';c++)
            ans+=solve(c,s);
        return ans;
    }
}
